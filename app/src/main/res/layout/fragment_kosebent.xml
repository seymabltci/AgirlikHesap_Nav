<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MilFragment">

    <EditText
        android:id="@+id/YukseklikGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:gravity="center|left"
        android:hint="Yükseklik (B)"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu1"
        app:layout_constraintStart_toStartOf="@+id/GenislikGiris"
        app:layout_constraintTop_toBottomOf="@+id/GenislikGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/olcu2"
        app:layout_constraintStart_toEndOf="@+id/YukseklikGiris"
        app:layout_constraintTop_toTopOf="@+id/YukseklikGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVMateryalAd"
        android:layout_width="91dp"
        android:layout_height="19dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:text="7.85 gr/cm3"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/spinnerIn"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIn"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/adetGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint=" Adet"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="@+id/UzunlukGiris"
        app:layout_constraintStart_toStartOf="@+id/UzunlukGiris"
        app:layout_constraintTop_toBottomOf="@+id/UzunlukGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewToplamSonuc"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="0.61701"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewSonuc"
        app:layout_constraintStart_toStartOf="@+id/textViewSonuc"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonuc"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_border"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="0.61701"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/adetGiris"
        app:layout_constraintStart_toStartOf="@+id/adetGiris"
        app:layout_constraintTop_toBottomOf="@+id/adetGiris"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerOlcu"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="@+id/spinnerIn"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIn"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/drop_icon"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerOlcu"
        app:layout_constraintEnd_toEndOf="@+id/spinnerOlcu"
        app:layout_constraintTop_toTopOf="@+id/spinnerOlcu" />

    <TextView
        android:id="@+id/TextViewMateryal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="  7.85 gr/cm3  "
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spinnerOlcu"
        app:layout_constraintStart_toStartOf="@+id/spinnerIn"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIn"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <Spinner
        android:id="@+id/spinnerIn"
        android:layout_width="192dp"
        android:layout_height="40dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/drop_icon"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerIn"
        app:layout_constraintEnd_toEndOf="@+id/spinnerIn"
        app:layout_constraintTop_toTopOf="@+id/spinnerIn" />

    <EditText
        android:id="@+id/EtKalGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Kalınlık (t)"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu3"
        app:layout_constraintStart_toStartOf="@+id/YukseklikGiris"
        app:layout_constraintTop_toBottomOf="@+id/YukseklikGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/olcu1"
        app:layout_constraintStart_toEndOf="@+id/EtKalGiris"
        app:layout_constraintTop_toTopOf="@+id/EtKalGiris"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/UzunlukGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Uzunluk"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu4"
        app:layout_constraintStart_toStartOf="@+id/EtKalGiris"
        app:layout_constraintTop_toBottomOf="@+id/EtKalGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/olcu3"
        app:layout_constraintStart_toEndOf="@+id/UzunlukGiris"
        app:layout_constraintTop_toTopOf="@+id/UzunlukGiris"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/GenislikGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:freezesText="false"
        android:gravity="center|left"
        android:hint="Genislik (A)"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVMateryalAd"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GenislikGiris"
        app:layout_constraintTop_toTopOf="@+id/GenislikGiris"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonHesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/general"
        android:text="Hesapla"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/darkred"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/buttonHesapla"
        app:layout_constraintTop_toTopOf="@+id/buttonHesapla"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonTeklif"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/darkred"
        android:onClick="teklif"
        android:text="Listeye Ekle"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/buttonReset"
        app:layout_constraintTop_toTopOf="@+id/buttonReset"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="148dp"
        android:layout_height="109dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/kosebentic"
        app:layout_constraintStart_toEndOf="@+id/buttonBack"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
