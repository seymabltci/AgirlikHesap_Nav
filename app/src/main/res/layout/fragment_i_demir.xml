<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IDemirFragment">


    <Spinner
        android:id="@+id/spinnerIDemir"
        android:layout_width="188dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="@+id/spinnerOlcu"
        app:layout_constraintStart_toStartOf="@+id/TextViewMateryal"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOlcu"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/spinnerOlcu"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="2dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerIDemir"
        app:layout_constraintEnd_toEndOf="@+id/tvMateryal"
        app:layout_constraintStart_toEndOf="@+id/TextViewMateryal"
        app:layout_constraintTop_toTopOf="@+id/TextViewMateryal"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TextViewMateryal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="7.85 gr/cm3"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spinnerOlcu"
        app:layout_constraintStart_toStartOf="@+id/tvMateryal"
        app:layout_constraintTop_toBottomOf="@+id/tvMateryal"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="42dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tvMateryal"
        android:layout_width="188dp"
        android:layout_height="40dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Ã‡elik"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerOlcu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/darkred"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonTeklif"
        app:layout_constraintStart_toEndOf="@+id/buttonHesapla"
        app:layout_constraintTop_toTopOf="@+id/buttonHesapla"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonHesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="9dp"
        android:backgroundTint="@color/general"
        android:text="Hesapla"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonReset"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonTeklif"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="@color/darkred"
        android:onClick="teklif"
        android:text="Listeye Ekle"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonReset"
        app:layout_constraintTop_toTopOf="@+id/buttonReset"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123dp"
        android:layout_height="134dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/iidemiric"
        app:layout_constraintStart_toEndOf="@+id/buttonBack"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerIPE"
        android:layout_width="310dp"
        android:layout_height="39dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIDemir"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/profilUzunlukGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Uzunluk (L)"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIPE"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profilUzunlukGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edittext_border"
        android:gravity="center|center_horizontal|left"
        android:paddingLeft="10dp"
        android:text="0.61701"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/adetGiris"
        app:layout_constraintStart_toStartOf="@+id/adetGiris"
        app:layout_constraintTop_toBottomOf="@+id/adetGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewToplamSonuc"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:gravity="center|center_horizontal|left"
        android:paddingStart="10dp"
        android:text="0.61701"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewSonuc"
        app:layout_constraintStart_toStartOf="@+id/textViewSonuc"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonuc"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/adetGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Adet"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilUzunlukGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVidemir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        android:text="IPE"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>

