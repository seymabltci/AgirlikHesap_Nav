<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MilFragment">

    <TextView
        android:id="@+id/TVMateryalAd"
        android:layout_width="86dp"
        android:layout_height="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:gravity="center"
        android:text="7.85 gr/cm3"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOlcu"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/adetGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Adet"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="@+id/UzunlukGiris"
        app:layout_constraintStart_toStartOf="@+id/UzunlukGiris"
        app:layout_constraintTop_toBottomOf="@+id/UzunlukGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewToplamSonuc"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_border"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text=" Ağırlık: 0.61701 KG "
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/textViewSonuc"
        app:layout_constraintStart_toStartOf="@+id/textViewSonuc"
        app:layout_constraintTop_toBottomOf="@+id/textViewSonuc"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewSonuc"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/edittext_border"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:text="Ağırlık: 0.61701 KG"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/adetGiris"
        app:layout_constraintStart_toStartOf="@+id/adetGiris"
        app:layout_constraintTop_toBottomOf="@+id/adetGiris"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerOlcu"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="@+id/spinnerIn"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIn"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/drop_icon"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerOlcu"
        app:layout_constraintEnd_toEndOf="@+id/spinnerOlcu"
        app:layout_constraintTop_toTopOf="@+id/spinnerOlcu" />

    <TextView
        android:id="@+id/TextViewMateryal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="  7.85 gr/cm3  "
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/spinnerOlcu"
        app:layout_constraintStart_toStartOf="@+id/spinnerIn"
        app:layout_constraintTop_toBottomOf="@+id/spinnerIn"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/UzunlukGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Uzunluk (L)"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu4"
        app:layout_constraintStart_toStartOf="@+id/GenisligiGiris"
        app:layout_constraintTop_toBottomOf="@+id/olcu2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/olcu2"
        app:layout_constraintStart_toEndOf="@+id/UzunlukGiris"
        app:layout_constraintTop_toTopOf="@+id/UzunlukGiris"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/olcu2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_border"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="mm"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GenisligiGiris"
        app:layout_constraintTop_toTopOf="@+id/GenisligiGiris"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/GenisligiGiris"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_border"
        android:ems="10"
        android:hint="Genislik (A)"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toStartOf="@+id/olcu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVMateryalAd"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerIn"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/edittext_border"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/drop_icon"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerIn"
        app:layout_constraintEnd_toEndOf="@+id/spinnerIn"
        app:layout_constraintTop_toTopOf="@+id/spinnerIn" />

    <Button
        android:id="@+id/buttonHesapla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/general"
        android:text="Hesapla"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonReset"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkred"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonHesapla"
        app:layout_constraintEnd_toStartOf="@+id/buttonTeklif"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonHesapla"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonTeklif"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/darkred"
        android:onClick="teklif"
        android:text="Listeye Ekle"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/buttonReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonReset"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="137dp"
        android:layout_height="97dp"
        android:src="@drawable/kare_demiric"
        app:layout_constraintStart_toEndOf="@+id/buttonBack"
        app:layout_constraintTop_toTopOf="@+id/buttonBack" />


</androidx.constraintlayout.widget.ConstraintLayout>
